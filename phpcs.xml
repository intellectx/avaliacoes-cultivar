<?xml version="1.0"?>
<ruleset name="Devtube Custom Standard" namespace="MyProject\CS\Standard">
    <description>Coding standard</description>

    <file>./app</file>
    <file>./config</file>
    <file>./routes</file>
    <file>./database</file>

    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/runtime/*</exclude-pattern>
    <exclude-pattern>*/frontend/*</exclude-pattern>

    <!-- Ignore for migrations. -->
    <!-- Ignore missing namespace for migrations -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>m\d{6}_\d{6}_.+\.php$</exclude-pattern>
    </rule>

    <!-- Ignore camel caps format for class name of migrations -->
    <rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
        <exclude-pattern>m\d{6}_\d{6}_.+\.php$</exclude-pattern>
    </rule>

    <rule ref="Generic.Files.LineLength">
        <exclude-pattern>*/database/migrations/*</exclude-pattern>
    </rule>

    <arg name="extensions" value="php" />
    <arg name="colors"/>

    <autoload>./vendor/autoload.php</autoload>

    <rule ref="PSR12"/>
</ruleset>
